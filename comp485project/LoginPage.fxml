<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: 000000;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comp485project.LoginController">
   <children>
      <TextField fx:id="usernameInput" layoutX="333.0" layoutY="239.0">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordInput" layoutX="333.0" layoutY="306.0">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </PasswordField>
      <Text layoutX="242.0" layoutY="328.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password: ">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Text>
      <Text layoutX="240.0" layoutY="261.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username: ">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Text>
      <Button fx:id="loginButton" layoutX="365.0" layoutY="382.0" mnemonicParsing="false" onAction="#switchToDashboard" text="Login">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <Button fx:id="toCreateAccount" layoutX="331.0" layoutY="464.0" mnemonicParsing="false" onAction="#switchToCreate" text="Create Account">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <Text fx:id="loginError" fill="RED" layoutX="222.0" layoutY="202.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username or password was incorrect. Try again. " textAlignment="CENTER" visible="false">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
