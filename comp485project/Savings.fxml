<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: 000000;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comp485project.SavingsController">
   <children>
      <Text layoutX="340.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Savings" textAlignment="CENTER">
         <font>
            <Font name="Times New Roman" size="35.0" />
         </font>
      </Text>

      <!-- Display the saved amount -->
      <Text fx:id="savedAmountText" layoutX="350.0" layoutY="139.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Amount Saved: $0" wrappingWidth="400.0">
         <font>
            <Font name="Times New Roman" size="22.0" />
         </font>
      </Text>

      <!-- Goal amount input -->
      <Text layoutX="150.0" layoutY="200.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Savings Goal: ">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </Text>
      <TextField fx:id="goalAmountField" layoutX="320.0" layoutY="190.0" prefWidth="180.0"/>

      <!-- Saved amount input -->
      <Text layoutX="150.0" layoutY="250.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Amount Saved: ">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </Text>
      <TextField fx:id="savedAmountField" layoutX="320.0" layoutY="240.0" prefWidth="180.0"/>

      <!-- Save Button -->
      <Button fx:id="saveButton" layoutX="320.0" layoutY="300.0" mnemonicParsing="false" onAction="#saveSavingsData" text="Save Data">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </Button>

      <!-- Back to Dashboard Button -->
      <Button fx:id="toDashboard" layoutX="32.0" layoutY="35.0" mnemonicParsing="false" onAction="#switchToDashboard" text="Back to Dashboard">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
